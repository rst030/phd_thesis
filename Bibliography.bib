   keywords = {Electrochemical quartz crystal microbalance,Immobilized dopants,In situ conductance,Nickel salen complexes,Poly(styrenesulfonate)},
   pages = {137637},
   publisher = {Elsevier Ltd},
   title = {Electrochemical synthesis and characterization of poly [Ni(CH3Osalen)] with immobilized poly(styrenesulfonate) anion dopants},
