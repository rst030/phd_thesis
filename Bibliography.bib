   issn = {10006818},
   issue = {4},
   journal = {Wuli Huaxue Xuebao/ Acta Physico - Chimica Sinica},
   keywords = {Charge-discharge mechanism,Electron paramagnetic resonance,Lithium-ion battery,Local structure,Sodium-ion battery,Solid-state NMR,Structure-function ralationship},
