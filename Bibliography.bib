   issn = {14639076},
   issue = {25},
   journal = {Physical Chemistry Chemical Physics},
   pages = {13827-13841},
   pmid = {34151324},
   publisher = {Royal Society of Chemistry},
   title = {Spin-spin interactions and spin delocalisation in a doped organic semiconductor probed by EPR spectroscopy},
   volume = {23},
   year = {2021},
