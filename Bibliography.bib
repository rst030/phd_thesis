   keywords = {Dendrite growth,In situ mri,Li-ion batteries},
   month = {9},
   pages = {10779-10784},
   publisher = {National Academy of Sciences},
   title = {Real-time 3D imaging of microstructure growth in battery cells using indirect MRI},
   volume = {113},
   year = {2016},
}
