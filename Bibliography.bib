   issn = {20452322},
   issue = {1},
   journal = {Scientific Reports},
   month = {12},
   pmid = {37414786},
   publisher = {Nature Research},
   title = {Multimodal investigation of electronic transport in PTMA and its impact on organic radical battery performance},
   volume = {13},
   year = {2023},
}
